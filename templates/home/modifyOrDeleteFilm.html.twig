{% extends "base.html.twig" %}

{% block body %}
<h1> Veuillez selectionner un film </h1>

	{% for film in films %}
						<article>
							<h2>
								{{ film.titre}}
							</h2>
							<div class="content">	
								<p>
									{{film.note}}
								</p>

									<img src="{{ asset('uploads/images/' ~ film.idImage) }}" alt="{{ film.titre }}">
									<a href="{{ path('film_delete', {'id': film.id}) }}" class="btn btn-primary"> Supprimer le film</a>
                                    <a href="{{ path('film_edit', {'id': film.id}) }}" class="btn btn-primary"> Modifier le film</a>

							</div>
						</article>
						
{% endfor %}

{% endblock %}
